<?xml version="1.0"?>
<ruleset name="BookFlow">
    <description>Project-local PHP_CodeSniffer config. Use ./vendor/bin/phpcs (no global config).</description>
    <file>./src</file>
    <file>./tests</file>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <rule ref="PSR12"/>
    <arg name="extensions" value="php"/>
    <arg value="sp"/>
</ruleset>
